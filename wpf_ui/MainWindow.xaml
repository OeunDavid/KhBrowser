<Window x:Class="WpfUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUI.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        TextElement.FontWeight="Medium"
        TextElement.FontSize="13.5"
        FontFamily="{materialDesign:MaterialDesignFont}"
        mc:Ignorable="d" Height="600" Width="1024" WindowStartupLocation="CenterScreen" Title="Tool FB" WindowState="Maximized" >

    <Grid Background="{DynamicResource MaterialDesignBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="135*"/>
            <ColumnDefinition Width="742*"/>
            <ColumnDefinition Width="74*"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="GridPrincipal" Grid.ColumnSpan="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        </Grid>
    </Grid>
</Window>
