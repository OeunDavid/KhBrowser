<Page x:Class="ToolKHBrowser.Views.pgNewsFeed"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:numeric="http://gu.se/NumericInput"
        Width="700"
        Height="480"
        Title="pgNewsFeed">

    <Page.Resources>
        <SolidColorBrush x:Key="MaterialDesignBody" Color="#858C9D"/>
        <Style x:Key="ConfigSectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#12E3D8"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ConfigLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
        </Style>

        <Style x:Key="ConfigDividerTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#20B2AA"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ConfigStepperIntBoxStyle"
               TargetType="{x:Type numeric:IntBox}">
            <Setter Property="Foreground" Value="#E7ECF5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type numeric:NumericBox}, ResourceId=SpinnerButtonStyleKey}"
               TargetType="{x:Type RepeatButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#6E778A"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Width" Value="52"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RepeatButton}">
                        <Border x:Name="ButtonRoot"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonRoot" Property="Background" Value="#151C29"/>
                                <Setter Property="Foreground" Value="#A7B2C8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonRoot" Property="Background" Value="#1B2434"/>
                                <Setter Property="Foreground" Value="#E7ECF5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type numeric:NumericBox}, ResourceId=SpinnersTemplateKey}"
                         TargetType="{x:Type numeric:SpinnerDecorator}">
            <Border Background="#0E131B"
                    BorderBrush="#1B2432"
                    BorderThickness="1"
                    CornerRadius="22"
                    Height="44">
                <Grid ClipToBounds="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="52"/>
                        <ColumnDefinition Width="1"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1"/>
                        <ColumnDefinition Width="52"/>
                    </Grid.ColumnDefinitions>

                    <RepeatButton Name="PART_DecreaseButton"
                                  Grid.Column="0"
                                  Content="-"
                                  Command="{Binding Child.DecreaseCommand, RelativeSource={RelativeSource TemplatedParent}}"
                                  Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type numeric:NumericBox}, ResourceId=SpinnerButtonStyleKey}}"/>

                    <Border Grid.Column="1" Background="#1A2230"/>

                    <ContentPresenter Grid.Column="2"
                                      Content="{TemplateBinding numeric:SpinnerDecorator.Child}"
                                      ContentSource="Child"
                                      VerticalAlignment="Stretch"/>

                    <Border Grid.Column="3" Background="#1A2230"/>

                    <RepeatButton Name="PART_IncreaseButton"
                                  Grid.Column="4"
                                  Content="+"
                                  Command="{Binding Child.IncreaseCommand, RelativeSource={RelativeSource TemplatedParent}}"
                                  Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type numeric:NumericBox}, ResourceId=SpinnerButtonStyleKey}}"/>
                </Grid>
            </Border>
        </ControlTemplate>

        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="#10141C"/>
            <Setter Property="Foreground" Value="#E7ECF5"/>
            <Setter Property="BorderBrush" Value="#252C39"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="{x:Type PasswordBox}">
            <Setter Property="Background" Value="#10141C"/>
            <Setter Property="Foreground" Value="#E7ECF5"/>
            <Setter Property="BorderBrush" Value="#252C39"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="{x:Type RadioButton}" BasedOn="{StaticResource MaterialDesignRadioButton}">
            <Setter Property="Foreground" Value="#E7ECF5"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ConfigSingleLineTextBoxStyle"
               TargetType="{x:Type TextBox}"
               BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Height" Value="34"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ConfigMultiLineTextBoxStyle"
               TargetType="{x:Type TextBox}"
               BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="MinHeight" Value="56"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Visible"/>
        </Style>
    </Page.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#05070D" Padding="20,14,20,90">
        <StackPanel Background="#05070D" Margin="0,0,0,12">
            <Border Background="#070B14"
                    BorderBrush="#1D2432"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="16"
                    Margin="0,0,0,14">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.ColumnSpan="2"
                               Style="{StaticResource ConfigSectionTitleStyle}"
                               Text="NEWS FEED"
                               Margin="0,0,0,14"/>

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Style="{StaticResource ConfigLabelStyle}"
                               Text="Play Time (s)"/>
                    <Grid Grid.Row="1"
                          Grid.Column="1"
                          Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="170"/>
                            <ColumnDefinition Width="34"/>
                            <ColumnDefinition Width="170"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <numeric:SpinnerDecorator Grid.Column="0">
                            <numeric:IntBox Name="txtPlayTimeStart"
                                            AllowSpinners="True"
                                            Style="{StaticResource ConfigStepperIntBoxStyle}"
                                            MinValue="0"
                                            MaxValue="10000000"
                                            Text="1"
                                            PreviewTextInput="NumberValidationTextBox"/>
                        </numeric:SpinnerDecorator>
                        <TextBlock Grid.Column="1"
                                   Style="{StaticResource ConfigLabelStyle}"
                                   Text="to"
                                   Margin="8,0"
                                   HorizontalAlignment="Center"/>
                        <numeric:SpinnerDecorator Grid.Column="2">
                            <numeric:IntBox Name="txtPlayTimeEnd"
                                            AllowSpinners="True"
                                            Style="{StaticResource ConfigStepperIntBoxStyle}"
                                            MinValue="0"
                                            MaxValue="10000000"
                                            Text="10"
                                            PreviewTextInput="NumberValidationTextBox"/>
                        </numeric:SpinnerDecorator>
                    </Grid>

                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               Style="{StaticResource ConfigLabelStyle}"
                               Text="React on Video/Post"/>
                    <WrapPanel Grid.Row="2"
                               Grid.Column="1"
                               Margin="0,0,0,10"
                               VerticalAlignment="Center">
                        <RadioButton x:Name="chbReachNone" IsChecked="True">None</RadioButton>
                        <RadioButton x:Name="chbReachLike">Like</RadioButton>
                        <RadioButton x:Name="chbReachComment">Comment</RadioButton>
                        <RadioButton x:Name="chbReachRandom">Random</RadioButton>
                    </WrapPanel>

                    <TextBlock Grid.Row="3"
                               Grid.Column="0"
                               Style="{StaticResource ConfigLabelStyle}"
                               Text="Comment / Post"/>
                    <Grid Grid.Row="3"
                          Grid.Column="1"
                          Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="170"/>
                            <ColumnDefinition Width="34"/>
                            <ColumnDefinition Width="170"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <numeric:SpinnerDecorator Grid.Column="0">
                            <numeric:IntBox Name="txtMinComments"
                                            AllowSpinners="True"
                                            Style="{StaticResource ConfigStepperIntBoxStyle}"
                                            MinValue="1"
                                            MaxValue="100"
                                            Text="1"
                                            PreviewTextInput="NumberValidationTextBox"/>
                        </numeric:SpinnerDecorator>
                        <TextBlock Grid.Column="1"
                                   Style="{StaticResource ConfigLabelStyle}"
                                   Text="to"
                                   Margin="8,0"
                                   HorizontalAlignment="Center"/>
                        <numeric:SpinnerDecorator Grid.Column="2">
                            <numeric:IntBox Name="txtMaxComments"
                                            AllowSpinners="True"
                                            Style="{StaticResource ConfigStepperIntBoxStyle}"
                                            MinValue="1"
                                            MaxValue="100"
                                            Text="1"
                                            PreviewTextInput="NumberValidationTextBox"/>
                        </numeric:SpinnerDecorator>
                    </Grid>

                    <TextBlock Grid.Row="4"
                               Grid.Column="0"
                               Style="{StaticResource ConfigLabelStyle}"
                               VerticalAlignment="Top"
                               Margin="0,6,12,0"
                               Text="Comments"/>
                    <TextBox Grid.Row="4"
                             Grid.Column="1"
                             Name="txtComments"
                             Style="{StaticResource ConfigMultiLineTextBoxStyle}"
                             Margin="0,0,0,14"/>

                    <Grid Grid.Row="5"
                          Grid.ColumnSpan="2"
                          Margin="0,2,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{StaticResource ConfigDividerTextStyle}"
                                   Text="Comment/Like on Post"/>
                        <Separator Grid.Column="1"
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Center"
                                   Background="#20B2AA"/>
                    </Grid>

                    <TextBlock Grid.Row="6"
                               Grid.Column="0"
                               Style="{StaticResource ConfigLabelStyle}"
                               Text="Comment/Like Post"/>
                    <WrapPanel Grid.Row="6"
                               Grid.Column="1"
                               Margin="0,0,0,10"
                               VerticalAlignment="Center">
                        <RadioButton x:Name="chbCommentPostLikeComment" IsChecked="True">Like+Comment</RadioButton>
                        <RadioButton x:Name="chbCommentPostLikeOnly">Like</RadioButton>
                        <RadioButton x:Name="chbCommentPostCommentOnly">Comment</RadioButton>
                    </WrapPanel>

                    <TextBlock Grid.Row="7"
                               Grid.Column="0"
                               Style="{StaticResource ConfigLabelStyle}"
                               Text="Video URL(s)"/>
                    <TextBox Grid.Row="7"
                             Grid.Column="1"
                             Name="txtCommentPostVideoUrls"
                             Style="{StaticResource ConfigSingleLineTextBoxStyle}"
                             Margin="0,0,0,10"
                             TextChanged="txtCommentPostVideoUrls_TextChanged"/>

                    <TextBlock Grid.Row="8"
                               Grid.Column="0"
                               Style="{StaticResource ConfigLabelStyle}"
                               VerticalAlignment="Top"
                               Margin="0,6,12,0"
                               Text="Comments"/>
                    <TextBox Grid.Row="8"
                             Grid.Column="1"
                             Name="txtCommentPostComments"
                             Style="{StaticResource ConfigMultiLineTextBoxStyle}"
                             Margin="0,0,0,14"/>

                    <Grid Grid.Row="9"
                          Grid.ColumnSpan="2"
                          Margin="0,2,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{StaticResource ConfigDividerTextStyle}"
                                   Text="Auto Scroll"/>
                        <Separator Grid.Column="1"
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Center"
                                   Background="#20B2AA"/>
                    </Grid>

                    <TextBlock Grid.Row="10"
                               Grid.Column="0"
                               Style="{StaticResource ConfigLabelStyle}"
                               Text="Comment/Like"/>
                    <WrapPanel Grid.Row="10"
                               Grid.Column="1"
                               Margin="0,0,0,10"
                               VerticalAlignment="Center">
                        <RadioButton x:Name="autolike" IsChecked="True">None</RadioButton>
                        <RadioButton x:Name="autoLike">Like</RadioButton>
                        <RadioButton x:Name="autoComment">Comment</RadioButton>
                        <RadioButton x:Name="autoCommentAndLike">Comment+Like</RadioButton>
                        <RadioButton x:Name="autoRandom">Random</RadioButton>
                    </WrapPanel>

                    <TextBlock Grid.Row="11"
                               Grid.Column="0"
                               Style="{StaticResource ConfigLabelStyle}"
                               VerticalAlignment="Top"
                               Margin="0,6,12,0"
                               Text="Comments"/>
                    <TextBox Grid.Row="11"
                             Grid.Column="1"
                             Name="txtAutoScrollComments"
                             Style="{StaticResource ConfigMultiLineTextBoxStyle}"
                             MinHeight="92"/>
                </Grid>
            </Border>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="82.81"/>
                    <ColumnDefinition Width="517.19"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,130" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2">
                    <TextBlock Margin="2" FontSize="13" FontWeight="Bold" Foreground="#12E3D8" VerticalAlignment="Center" HorizontalAlignment="Left"><Run Text="MESSENGER"/></TextBlock>
                </StackPanel>
                <StackPanel Margin="5,5,5,5" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Call Sounds"/></TextBlock>
                        </StackPanel>
                        <Grid Grid.Row="0" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"></RowDefinition>
                            </Grid.RowDefinitions>
                            <RadioButton x:Name="chbCallSoundNone" IsChecked="True" Grid.Row="0" Grid.Column="0"  Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}">None</RadioButton>
                            <RadioButton x:Name="chbCallSoundOn" Grid.Row="0" Grid.Column="1" Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}" >On</RadioButton>
                            <RadioButton x:Name="chbCallSoundOff" Grid.Row="0" Grid.Column="2" Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}" >Off</RadioButton>
                        </Grid>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Message Sounds"/></TextBlock>
                        </StackPanel>
                        <Grid Grid.Row="0" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"></ColumnDefinition>
                                <ColumnDefinition Width="60"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"></RowDefinition>
                            </Grid.RowDefinitions>
                            <RadioButton x:Name="chbMessageSoundNone" IsChecked="True" Grid.Row="0" Grid.Column="0"  Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}">None</RadioButton>
                            <RadioButton x:Name="chbMessageSoundOn" Grid.Row="0" Grid.Column="1" Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}" >On</RadioButton>
                            <RadioButton x:Name="chbMessageSoundOff" Grid.Row="0" Grid.Column="2" Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}" >Off</RadioButton>
                        </Grid>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Pop-up"/></TextBlock>
                        </StackPanel>
                        <Grid Grid.Row="0" Grid.Column="1">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="60"></ColumnDefinition>
                                <ColumnDefinition Width="60"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"></RowDefinition>
                            </Grid.RowDefinitions>
                            <RadioButton x:Name="chbPopUpSoundNone" IsChecked="True" Grid.Row="0" Grid.Column="0"  Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}">None</RadioButton>
                            <RadioButton x:Name="chbPopUpSoundOn" Grid.Row="0" Grid.Column="1" Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}" >On</RadioButton>
                            <RadioButton x:Name="chbPopUpSoundOff" Grid.Row="0" Grid.Column="2" Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}" >Off</RadioButton>
                        </Grid>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Active Status"/></TextBlock>
                        </StackPanel>
                        <Grid Grid.Row="0" Grid.Column="1">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="60"></ColumnDefinition>
                                <ColumnDefinition Width="60"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"></RowDefinition>
                            </Grid.RowDefinitions>
                            <RadioButton x:Name="chbActiveStatusNone" IsChecked="True" Grid.Row="0" Grid.Column="0"  Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}">None</RadioButton>
                            <RadioButton x:Name="chbActiveStatusOn" Grid.Row="0" Grid.Column="1" Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}" >On</RadioButton>
                            <RadioButton x:Name="chbActiveStatusOff" Grid.Row="0" Grid.Column="2" Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}" >Off</RadioButton>
                        </Grid>
                    </Grid>
                </StackPanel>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="600"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Margin="0" Grid.Column="0" Grid.Row="0">
                    <TextBlock Margin="2" FontSize="13" FontWeight="Bold" Foreground="#12E3D8" VerticalAlignment="Center" HorizontalAlignment="Left"><Run Text="POST TIMELINE"/></TextBlock>
                </StackPanel>
                <StackPanel Margin="5" Grid.Column="0" Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="130"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0" Margin="3">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Number post(s)"/></TextBlock>
                        </StackPanel>
                        <numeric:SpinnerDecorator Grid.Column="1"  Grid.Row="0" Margin="2,4">
                            <numeric:IntBox Name="txtTimelineMinNumber" AllowSpinners="True" Style="{StaticResource ConfigStepperIntBoxStyle}" MinValue="1" MaxValue="10000000" Text="1" PreviewTextInput="NumberValidationTextBox"/>
                        </numeric:SpinnerDecorator>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="2" Margin="0">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="to"/></TextBlock>
                        </StackPanel>
                        <numeric:SpinnerDecorator Grid.Column="3"  Grid.Row="0" Margin="2,4">
                            <numeric:IntBox Name="txtTimelineMaxNumber" AllowSpinners="True" Style="{StaticResource ConfigStepperIntBoxStyle}" MinValue="1" MaxValue="10000000" Text="1" PreviewTextInput="NumberValidationTextBox"/>
                        </numeric:SpinnerDecorator>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                            <TextBlock Margin="6" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Delete after post"/></TextBlock>
                        </StackPanel>
                        <ToggleButton Grid.Row="0" Grid.Column="1" x:Name="chbDeleteAfterPost"  IsChecked="False" Height="12" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left" Margin="0"/>

                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Grid.Column="0">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Source Folder"/></TextBlock>
                        </StackPanel>
                        <TextBox Name="txtSourceFolder" Grid.Column="1" Margin="2"  Background="#141923" Foreground="#E5E7EB" BorderBrush="#252C39"/>
                        <Button x:Name="btnBrowse" Grid.Column="2" Height="28" Margin="2" Content="Browse" Background="#2563EB" BorderBrush="#2563EB" Foreground="White" FontWeight="SemiBold" Click="btnBrowse_Click"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Grid.Column="0">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Caption(s)"/></TextBlock>
                        </StackPanel>
                        <TextBox Name="txtCaption" Grid.Column="2" Margin="2,2,2,2" Height="50"  Background="#141923" Foreground="#E5E7EB" BorderBrush="#252C39" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"/>
                    </Grid>
                </StackPanel>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="600"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Margin="0" Grid.Column="0" Grid.Row="0">
                    <TextBlock Margin="2" FontSize="13" FontWeight="Bold" Foreground="#12E3D8" VerticalAlignment="Center" HorizontalAlignment="Left"><Run Text="POST TO PAGE"/></TextBlock>
                </StackPanel>
                <StackPanel Margin="5" Grid.Column="0" Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="130"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0" Margin="3">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Number post(s)"/></TextBlock>
                        </StackPanel>
                        <numeric:SpinnerDecorator Grid.Column="1"  Grid.Row="0" Margin="2,4">
                            <numeric:IntBox Name="txtPagePostMinNumber" AllowSpinners="True" Style="{StaticResource ConfigStepperIntBoxStyle}" MinValue="1" MaxValue="10000000" Text="1" PreviewTextInput="NumberValidationTextBox"/>
                        </numeric:SpinnerDecorator>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="2" Margin="0">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="to"/></TextBlock>
                        </StackPanel>
                        <numeric:SpinnerDecorator Grid.Column="3"  Grid.Row="0" Margin="2,4">
                            <numeric:IntBox Name="txtPagePostMaxNumber" AllowSpinners="True" Style="{StaticResource ConfigStepperIntBoxStyle}" MinValue="1" MaxValue="10000000" Text="1" PreviewTextInput="NumberValidationTextBox"/>
                        </numeric:SpinnerDecorator>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Page ID(s)"/></TextBlock>
                        </StackPanel>
                        <TextBox Name="txtPagePostIds" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="2,2,2,2" Height="60"  Background="#141923" Foreground="#E5E7EB" BorderBrush="#252C39" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Grid.Column="0">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Source Folder"/></TextBlock>
                        </StackPanel>
                        <TextBox Name="txtPagePostSourceFolder" Grid.Column="1" Margin="2"  Background="#141923" Foreground="#E5E7EB" BorderBrush="#252C39"/>
                        <Button x:Name="btnPagePostBrowse" Grid.Column="2" Height="28" Margin="2" Content="Browse" Background="#2563EB" BorderBrush="#2563EB" Foreground="White" FontWeight="SemiBold" Click="btnPagePostBrowse_Click"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Grid.Column="0">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Caption(s)"/></TextBlock>
                        </StackPanel>
                        <TextBox Name="txtPagePostCaption" Grid.Column="2" Margin="2,2,2,2" Height="50"  Background="#141923" Foreground="#E5E7EB" BorderBrush="#252C39" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"/>
                    </Grid>
                </StackPanel>
            </Grid>
            <Grid>
                <StackPanel Margin="5">

                    <Button x:Name="btnSaveConfig" Height="44" Width="220" Margin="0" IsEnabled="True" Click="btnSaveConfig_Click" Visibility="Collapsed" Background="#2563EB" BorderBrush="#2563EB" Foreground="White" FontWeight="Bold">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSave" Width="15" Height="15" VerticalAlignment="Center" Margin="0"/>
                            <TextBlock Margin="0" Text="SAVE CONFIG" TextAlignment="Left" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>


