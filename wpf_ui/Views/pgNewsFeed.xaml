<Page x:Class="ToolKHBrowser.Views.pgNewsFeed"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:numeric="http://gu.se/NumericInput"
        Width="700"
        Height="480"
        Title="pgGroups">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#05070D" Padding="16,12,16,80">
        <StackPanel Background="#05070D" Margin="8,6,8,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="600"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Margin="0" Grid.Column="0" Grid.Row="0">
                    <TextBlock Margin="2" FontSize="11" Foreground="#FF20B2AA" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="News Feed --------------------------------------------------"/></TextBlock>
                </StackPanel>
                <StackPanel Margin="5" Grid.Column="0" Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="130"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0" Margin="3">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Play Time (s)"/></TextBlock>
                        </StackPanel>
                        <numeric:SpinnerDecorator Grid.Column="1"  Grid.Row="0" Margin="2,4">
                            <numeric:IntBox Name="txtPlayTimeStart" AllowSpinners="True" Foreground="White" Style="{DynamicResource MaterialDesignTextBoxBase}" Margin="4,0" MinValue="0" MaxValue="10000000" Text="1" PreviewTextInput="NumberValidationTextBox"/>
                        </numeric:SpinnerDecorator>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="2" Margin="0">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="to"/></TextBlock>
                        </StackPanel>
                        <numeric:SpinnerDecorator Grid.Column="3"  Grid.Row="0" Margin="2,4">
                            <numeric:IntBox Name="txtPlayTimeEnd" AllowSpinners="True" Foreground="White" Style="{DynamicResource MaterialDesignTextBoxBase}" Margin="4,0" MinValue="0" MaxValue="10000000" Text="10" PreviewTextInput="NumberValidationTextBox"/>
                        </numeric:SpinnerDecorator>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="React on Video/Post"/></TextBlock>
                        </StackPanel>
                        <Grid Grid.Row="0" Grid.Column="1">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="60"></ColumnDefinition>
                                <ColumnDefinition Width="53"></ColumnDefinition>
                                <ColumnDefinition Width="85"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"></RowDefinition>
                            </Grid.RowDefinitions>
                            <RadioButton x:Name="chbReachNone" IsChecked="True" Grid.Row="0" Grid.Column="0"  Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}">None</RadioButton>
                            <RadioButton x:Name="chbReachLike" Grid.Row="0" Grid.Column="1" Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}" >Like</RadioButton>
                            <RadioButton x:Name="chbReachComment" Grid.Row="0" Grid.Column="2" Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}" >Comment</RadioButton>
                            <RadioButton x:Name="chbReachRandom" Grid.Row="0" Grid.Column="3" Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}">Random</RadioButton>
                        </Grid>
                    </Grid>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Row 0: Left label = Comment / Post -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Margin="2"
                                   FontSize="11"
                                   Foreground="{DynamicResource MaterialDesignBody}"
                                   VerticalAlignment="Center">
                            <Run Text="Comment / Post"/>
                        </TextBlock>

                        <!-- Row 0: Min -->
                        <numeric:SpinnerDecorator Grid.Row="0" Grid.Column="1" Margin="2,2">
                            <numeric:IntBox Name="txtMinComments"
                                            AllowSpinners="True"
                                            Foreground="White"
                                            Style="{DynamicResource MaterialDesignTextBoxBase}"
                                            Margin="4,0"
                                            MinValue="1"
                                            MaxValue="100"
                                            Text="1"
                                            PreviewTextInput="NumberValidationTextBox"/>
                        </numeric:SpinnerDecorator>

                        <!-- Row 0: to -->
                        <TextBlock Grid.Row="0" Grid.Column="2"
                                   Margin="2"
                                   FontSize="11"
                                   Foreground="{DynamicResource MaterialDesignBody}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center">
                            <Run Text="to"/>
                        </TextBlock>

                        <!-- Row 0: Max -->
                        <numeric:SpinnerDecorator Grid.Row="0" Grid.Column="3" Margin="2,2">
                            <numeric:IntBox Name="txtMaxComments"
                        AllowSpinners="True"
                        Foreground="White"
                        Style="{DynamicResource MaterialDesignTextBoxBase}"
                        Margin="4,0"
                        MinValue="1"
                        MaxValue="100"
                        Text="1"
                        PreviewTextInput="NumberValidationTextBox"/>
                        </numeric:SpinnerDecorator>

                        <!-- Row 1: Left label = Comments (dropped down) -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                           Margin="2,6,2,2"
                           FontSize="11"
                           Foreground="{DynamicResource MaterialDesignBody}"
                           VerticalAlignment="Top">
                    <Run Text="Comments"/>
                        </TextBlock>
                        <TextBox Name="txtComments"
                                 Grid.Row="1"
                                 Grid.Column="1"
                                 Grid.ColumnSpan="4"
                                 Margin="2,2,2,2"
                                 Height="30"
                                 Background="#141923" Foreground="#E5E7EB" BorderBrush="#252C39"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                             VerticalScrollBarVisibility="Visible"/>
                    </Grid>
                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Margin="2"
                               FontSize="11"
                               Foreground="#FF20B2AA"
                               VerticalAlignment="Center"
                               Text="Comment/like on Post"/>

                            <Separator Grid.Column="1" Foreground="#FF20B2AA"
                               Margin="8,0,2,0" Background="#FF20B2AA"
                               VerticalAlignment="Center"/>
                        </Grid>


                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Margin="2"
                                   FontSize="11"
                                   Foreground="{DynamicResource MaterialDesignBody}"
                                   VerticalAlignment="Center">
                            <Run Text="Comment/Like Post"/>
                        </TextBlock>

                        <Grid Grid.Row="1" Grid.Column="1" Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="95"/>
                                <ColumnDefinition Width="75"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <RadioButton x:Name="chbCommentPostLikeComment" IsChecked="True" Grid.Column="0" Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}">Like+Comment</RadioButton>
                            <RadioButton x:Name="chbCommentPostLikeOnly" Grid.Column="1" Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}">Like</RadioButton>
                            <RadioButton x:Name="chbCommentPostCommentOnly" Grid.Column="2" Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}">Comment</RadioButton>
                        </Grid>

                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Margin="2,10,2,10"
                                   FontSize="11"
                                   Foreground="{DynamicResource MaterialDesignBody}"
                                   VerticalAlignment="Top">
                            <Run Text="Video URL(s)"/>
                        </TextBlock>

                        <TextBox Name="txtCommentPostVideoUrls"
                                 Grid.Row="2"
                                 Grid.Column="1"
                                 Margin="2,10,2,10"
                                 Height="30"
                                 Background="#141923" Foreground="#E5E7EB" BorderBrush="#252C39"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Visible" TextChanged="txtCommentPostVideoUrls_TextChanged"/>

                        <TextBlock Grid.Row="4" Grid.Column="0"
                                   Margin="2,6,2,2"
                                   FontSize="11"
                                   Foreground="{DynamicResource MaterialDesignBody}"
                                   VerticalAlignment="Top">
                            <Run Text="Comments"/>
                        </TextBlock>

                        <TextBox Name="txtCommentPostComments"
                                 Grid.Row="4"
                                 Grid.Column="1"
                                 Margin="2,2,2,2"
                                 Height="30"
                                 Background="#141923" Foreground="#E5E7EB" BorderBrush="#252C39"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Visible"/>
                    </Grid>
                </StackPanel>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0" Grid.Column="0"
               Foreground="#FF20B2AA"
               Margin="0"
               Text="Auto Scroll"/>

                <Separator Grid.Row="0" Grid.Column="1"
               Background="#FF20B2AA"
               Height="1"
               Margin="8,0,2,0"
               VerticalAlignment="Center"/>

                <!-- Content: START LEFT -->
                <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                      Margin="0"
                      HorizontalAlignment="Left">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="80"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Comment/Like"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               FontSize="11"
                               Margin="2,6,2,2"
                               VerticalAlignment="Center"/>

                    <Grid Grid.Row="0" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <RadioButton Grid.Column="0"
                                     x:Name="autolike"
                                     IsChecked="True"
                                     Margin="0"
                                     Foreground="{DynamicResource MaterialDesignBody}"
                                     Style="{DynamicResource MaterialDesignRadioButton}">
                            None
                        </RadioButton>
                        <RadioButton Grid.Column="1"
                                     x:Name="autoLike"
                                     Margin="5,0,0,0"
                                     Foreground="{DynamicResource MaterialDesignBody}"
                                     Style="{DynamicResource MaterialDesignRadioButton}">
                            Like
                        </RadioButton>
                        <RadioButton Grid.Column="2"
                                     x:Name="autoComment"
                                     Margin="5,0,0,0"
                                     Foreground="{DynamicResource MaterialDesignBody}"
                                     Style="{DynamicResource MaterialDesignRadioButton}">
                            Comment
                        </RadioButton>
                        <RadioButton Grid.Column="3"
                                     x:Name="autoCommentAndLike"
                                     Margin="5,0,0,0"
                                     Foreground="{DynamicResource MaterialDesignBody}"
                                     Style="{DynamicResource MaterialDesignRadioButton}">
                            Comment+Like
                        </RadioButton>
                        <RadioButton Grid.Column="4"
                                     x:Name="autoRandom"
                                     Margin="5,0,0,0"
                                     Foreground="{DynamicResource MaterialDesignBody}"
                                     Style="{DynamicResource MaterialDesignRadioButton}">
                            Random
                        </RadioButton>
                    </Grid>

                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Margin="2"
                               FontSize="11"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               VerticalAlignment="Center">
                        <Run Text="Comments"/>
                    </TextBlock>

                    <TextBox Name="txtAutoScrollComments"
                             Grid.Row="2"
                             Grid.Column="1"
                             Margin="2,2,2,2"
                             Height="70"
                             Background="#141923" Foreground="#E5E7EB" BorderBrush="#252C39"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Visible"/>
                </Grid>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="82.81"/>
                    <ColumnDefinition Width="517.19"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,130" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2">
                    <TextBlock Margin="2" FontSize="11" Foreground="#FF20B2AA" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Messenger --------------------------------------------------"/></TextBlock>
                </StackPanel>
                <StackPanel Margin="5,5,5,5" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Call Sounds"/></TextBlock>
                        </StackPanel>
                        <Grid Grid.Row="0" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"></RowDefinition>
                            </Grid.RowDefinitions>
                            <RadioButton x:Name="chbCallSoundNone" IsChecked="True" Grid.Row="0" Grid.Column="0"  Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}">None</RadioButton>
                            <RadioButton x:Name="chbCallSoundOn" Grid.Row="0" Grid.Column="1" Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}" >On</RadioButton>
                            <RadioButton x:Name="chbCallSoundOff" Grid.Row="0" Grid.Column="2" Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}" >Off</RadioButton>
                        </Grid>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Message Sounds"/></TextBlock>
                        </StackPanel>
                        <Grid Grid.Row="0" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"></ColumnDefinition>
                                <ColumnDefinition Width="60"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"></RowDefinition>
                            </Grid.RowDefinitions>
                            <RadioButton x:Name="chbMessageSoundNone" IsChecked="True" Grid.Row="0" Grid.Column="0"  Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}">None</RadioButton>
                            <RadioButton x:Name="chbMessageSoundOn" Grid.Row="0" Grid.Column="1" Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}" >On</RadioButton>
                            <RadioButton x:Name="chbMessageSoundOff" Grid.Row="0" Grid.Column="2" Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}" >Off</RadioButton>
                        </Grid>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Pop-up"/></TextBlock>
                        </StackPanel>
                        <Grid Grid.Row="0" Grid.Column="1">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="60"></ColumnDefinition>
                                <ColumnDefinition Width="60"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"></RowDefinition>
                            </Grid.RowDefinitions>
                            <RadioButton x:Name="chbPopUpSoundNone" IsChecked="True" Grid.Row="0" Grid.Column="0"  Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}">None</RadioButton>
                            <RadioButton x:Name="chbPopUpSoundOn" Grid.Row="0" Grid.Column="1" Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}" >On</RadioButton>
                            <RadioButton x:Name="chbPopUpSoundOff" Grid.Row="0" Grid.Column="2" Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}" >Off</RadioButton>
                        </Grid>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Active Status"/></TextBlock>
                        </StackPanel>
                        <Grid Grid.Row="0" Grid.Column="1">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="60"></ColumnDefinition>
                                <ColumnDefinition Width="60"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"></RowDefinition>
                            </Grid.RowDefinitions>
                            <RadioButton x:Name="chbActiveStatusNone" IsChecked="True" Grid.Row="0" Grid.Column="0"  Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}">None</RadioButton>
                            <RadioButton x:Name="chbActiveStatusOn" Grid.Row="0" Grid.Column="1" Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}" >On</RadioButton>
                            <RadioButton x:Name="chbActiveStatusOff" Grid.Row="0" Grid.Column="2" Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignRadioButton}" >Off</RadioButton>
                        </Grid>
                    </Grid>
                </StackPanel>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="600"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Margin="0" Grid.Column="0" Grid.Row="0">
                    <TextBlock Margin="2" FontSize="11" Foreground="#FF20B2AA" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Post Timeline ------------------------------------------------"/></TextBlock>
                </StackPanel>
                <StackPanel Margin="5" Grid.Column="0" Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="130"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0" Margin="3">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Number post(s)"/></TextBlock>
                        </StackPanel>
                        <numeric:SpinnerDecorator Grid.Column="1"  Grid.Row="0" Margin="2,4">
                            <numeric:IntBox Name="txtTimelineMinNumber" AllowSpinners="True" Foreground="White" Style="{DynamicResource MaterialDesignTextBoxBase}" Margin="4,0" MinValue="1" MaxValue="10000000" Text="1" PreviewTextInput="NumberValidationTextBox"/>
                        </numeric:SpinnerDecorator>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="2" Margin="0">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="to"/></TextBlock>
                        </StackPanel>
                        <numeric:SpinnerDecorator Grid.Column="3"  Grid.Row="0" Margin="2,4">
                            <numeric:IntBox Name="txtTimelineMaxNumber" AllowSpinners="True" Foreground="White" Style="{DynamicResource MaterialDesignTextBoxBase}" Margin="4,0" MinValue="1" MaxValue="10000000" Text="1" PreviewTextInput="NumberValidationTextBox"/>
                        </numeric:SpinnerDecorator>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                            <TextBlock Margin="6" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Delete after post"/></TextBlock>
                        </StackPanel>
                        <ToggleButton Grid.Row="0" Grid.Column="1" x:Name="chbDeleteAfterPost"  IsChecked="False" Height="12" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left" Margin="0"/>

                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Grid.Column="0">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Source Folder"/></TextBlock>
                        </StackPanel>
                        <TextBox Name="txtSourceFolder" Grid.Column="1" Margin="2"  Background="#141923" Foreground="#E5E7EB" BorderBrush="#252C39"/>
                        <Button x:Name="btnBrowse" Grid.Column="2" Height="28" Margin="2" Content="Browse" Background="#2563EB" BorderBrush="#2563EB" Foreground="White" FontWeight="SemiBold" Click="btnBrowse_Click"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Grid.Column="0">
                            <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Caption(s)"/></TextBlock>
                        </StackPanel>
                        <TextBox Name="txtCaption" Grid.Column="2" Margin="2,2,2,2" Height="50"  Background="#141923" Foreground="#E5E7EB" BorderBrush="#252C39" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"/>
                    </Grid>
                </StackPanel>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="600"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Margin="0" Grid.Column="0" Grid.Row="0">
                    <TextBlock Margin="2" FontSize="11" Foreground="#FF20B2AA" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Post to Page ------------------------------------------------"/></TextBlock>
                </StackPanel>
                <StackPanel Margin="5" Grid.Column="0" Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="130"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0" Margin="3">
