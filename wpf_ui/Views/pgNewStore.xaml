<Page x:Class="ToolKHBrowser.Views.pgNewStore"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:ToolKHBrowser.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300"
      Title="pgNewStore" Width="500">

    <Grid Margin="5,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
            </Grid.RowDefinitions>

            <TextBlock FontWeight="Bold" Grid.Column="0" Grid.Row="0" Margin="5" TextWrapping="WrapWithOverflow">Name</TextBlock>
            <TextBox Name="txtName" Grid.Column="1" Grid.Row="0" Margin="2" BorderBrush="#FFDCDCDC" ></TextBox>

            <TextBlock FontWeight="Bold" Grid.Column="0" Grid.Row="1" Margin="5" TextWrapping="WrapWithOverflow">Description</TextBlock>
            <TextBox Name="txtDescription" Grid.Column="1" Grid.Row="1" Margin="2" BorderBrush="#FFDCDCDC" TextWrapping="Wrap" MaxLength="1000"></TextBox>
            
            <TextBlock FontWeight="Bold" Grid.Column="0" Grid.Row="2" Margin="5">Status</TextBlock>
            <ToggleButton Name="chbStatus" IsChecked="True" Height="15" Grid.Column="1" Grid.Row="2" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left"/>

            <TextBlock Visibility="Collapsed" FontWeight="Bold" Grid.Column="0" Grid.Row="3" Margin="5">Temp</TextBlock>
            <ToggleButton Visibility="Collapsed" Name="chbTemp" IsChecked="False" Height="15" Grid.Column="1" Grid.Row="3" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left"/>

            <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Height="30" Width="80" Margin="5,5" Click="btnSave_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Play" Width="15" Height="15" VerticalAlignment="Center" Margin="2"/>
                        <TextBlock Margin="0,2" Grid.Column="1" Text="Save" TextAlignment="Left" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
