<UserControl x:Class="ToolKHBrowser.Views.Controls.DashboardFriendsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/DashboardPanelStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="96"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}"
                           Text="Accept Friends"/>
                <ToggleButton Grid.Column="1"
                              Tag="chbFriendsAccept"
                              Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}"
                           Text="Add Friends"/>
                <ToggleButton Grid.Column="1"
                              Tag="chbFriendsAdd"
                              Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Column="2">
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}"
                           Text="Backup Friends"/>
                <ToggleButton Grid.Column="1"
                              Tag="chbFriendsBackup"
                              Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}"
                           Text="Add by UID"/>
                <ToggleButton Grid.Column="1"
                              Tag="chbFriendsByUID"
                              Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
