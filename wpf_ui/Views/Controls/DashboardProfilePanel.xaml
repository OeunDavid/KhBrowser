<UserControl x:Class="ToolKHBrowser.Views.Controls.DashboardProfilePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/DashboardPanelStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="56"/>
            <ColumnDefinition Width="72"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="56"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}" Text="Delete Data"/>
                <ToggleButton Grid.Column="1" Tag="chbProfileDeleteData" Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}" Text="New Info"/>
                <ToggleButton Grid.Column="1" Tag="chbProfileNewInfo" Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}" Text="Public Post"/>
                <ToggleButton Grid.Column="1" Tag="chbProfilePublicPost" Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}" Text="Turn on 2FA"/>
                <ToggleButton Grid.Column="1" Tag="chbProfileTurnOn2FA" Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}" Text="New Password"/>
                <ToggleButton Grid.Column="1" Tag="chbProfileNewPassword" Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}" Text="Get Info (Token)"/>
                <ToggleButton Grid.Column="1" Tag="chbGetInfo" Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}" Text="Delete Activity"/>
                <ToggleButton Grid.Column="1" Tag="chbDeleteActivity" Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Column="3">
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}" Text="Check-in"/>
                <ToggleButton Grid.Column="1" Tag="chbProfileCheckIn" Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}" Text="Marketplace"/>
                <ToggleButton Grid.Column="1" Tag="chbProfileMarketplace" Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}" Text="Turn on PM"/>
                <ToggleButton Grid.Column="1" Tag="chbProfileTurnOnPM" Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}" Text="Lock Time"/>
                <ToggleButton Grid.Column="1" Tag="chbLockTime" Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}" Text="Primary Location"/>
                <ToggleButton Grid.Column="1" Tag="chbPrimaryLocation" Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}" Text="Creation Date"/>
                <ToggleButton Grid.Column="1" Tag="chbCreationDate" Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}" Text="Token"/>
                <ToggleButton Grid.Column="1" Tag="chbToken" Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>

