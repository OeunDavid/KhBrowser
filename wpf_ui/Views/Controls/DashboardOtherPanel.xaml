<UserControl x:Class="ToolKHBrowser.Views.Controls.DashboardOtherPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/DashboardPanelStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="56"/>
            <ColumnDefinition Width="72"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="56"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}"
                           Text="Watch Time"/>
                <ToggleButton Grid.Column="1"
                              Tag="chbOtherWatchTime"
                              Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}"
                           Text="Reel Play"/>
                <ToggleButton Grid.Column="1"
                              Tag="chbOtherReelPlay"
                              Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}"
                           Text="English (US)"/>
                <ToggleButton Grid.Column="1"
                              Tag="chbOtherChangeLanguage"
                              Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}"
                           Text="Logout All Devices"/>
                <ToggleButton Grid.Column="1"
                              Tag="chbLogOutAllDevices"
                              Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}"
                           Text="Unlock Checkpoint"/>
                <ToggleButton Grid.Column="1"
                              Tag="chbAutoUnlockCheckpoint"
                              Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}"
                           Text="Use User Data"/>
                <ToggleButton Grid.Column="1"
                              Tag="chbUseUserData"
                              Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Column="3">
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}"
                           Text="Check Reel Invite"/>
                <ToggleButton Grid.Column="1"
                              Tag="chbCheckReelInvite"
                              Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}"
                           Text="No Switch Page"/>
                <ToggleButton Grid.Column="1"
                              Tag="chbNoSwitchPage"
                              Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}"
                           Text="Working on Page?"/>
                <ToggleButton Grid.Column="1"
                              Tag="chbWorkingOnPage"
                              Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}"
                           Text="Recovery Phone"/>
                <ToggleButton Grid.Column="1"
                              Tag="chbRecoveryPhone"
                              Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}"
                           Text="Share by Graph"/>
                <ToggleButton Grid.Column="1"
                              Tag="chbShareByGraph"
                              Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>

