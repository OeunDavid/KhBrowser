<UserControl x:Class="ToolKHBrowser.Views.Controls.DashboardSharePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/DashboardPanelStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="96"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}" Text="Share to Timeline"/>
                <ToggleButton Grid.Column="1" Tag="chbShareToTimeline" Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Grid.Row="1" Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}" Text="Share by Page Profile"/>
                <ToggleButton Grid.Column="1" Tag="chbSharePageProfile" Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Grid.Row="2" Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}" Text="Auto Like Post"/>
                <ToggleButton Grid.Column="1" Tag="chbShareAutoLike" Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}" Text="Share to Groups"/>
                <ToggleButton Grid.Column="1" Tag="chbShareToGroups" Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Grid.Row="1" Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}" Text="Share Website"/>
                <ToggleButton Grid.Column="1" Tag="chbShareWebsite" Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
            <Grid Grid.Row="2" Style="{StaticResource DashboardConfigRowStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource ShareCardLabelStyle}" Text="Auto Comment"/>
                <ToggleButton Grid.Column="1" Tag="chbShareAutoComment" Style="{StaticResource DashboardPillSwitchStyle}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
