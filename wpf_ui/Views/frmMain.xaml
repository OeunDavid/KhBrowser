<UserControl x:Class="WpfUI.Views.frmMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:numeric="http://gu.se/NumericInput"
             Height="auto" Width="auto"
             FontSize="11"
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="341*"/>
            <ColumnDefinition Width="265*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="888*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.Row="0" Margin="3,3,3,3" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0" Grid.Row="0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontWeight="Bold"
                               Foreground="#FF20B2AA"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">General --------------------------------------------------------------------------------------------</TextBlock>
                </StackPanel>

                <!-- ✅ FIXED THIS GRID (RowDefinitions were broken) -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Column="0" Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="150" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0" Margin="5,0,0,0">
                            <TextBlock Margin="2" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Run Text="Thread" />
                            </TextBlock>
                        </StackPanel>

                        <numeric:SpinnerDecorator Grid.Column="1" Grid.Row="0" Margin="2,4">
                            <numeric:IntBox Name="txtThread"
                                            AllowSpinners="True"
                                            Foreground="White"
                                            Style="{DynamicResource MaterialDesignTextBoxBase}"
                                            Margin="4,0"
                                            MinValue="1"
                                            MaxValue="1000000"
                                            Text="6"
                                            PreviewTextInput="NumberValidationTextBox" />
                        </numeric:SpinnerDecorator>
                    </Grid>

                    <Grid Grid.Column="0" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="5,0,0,0" Grid.ColumnSpan="2">
                            <TextBlock Margin="2" Foreground="{DynamicResource MaterialDesignBody}" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Run Text="Reset IP (Acc)" />
                            </TextBlock>
                        </StackPanel>

                        <numeric:SpinnerDecorator Grid.Column="1" Margin="2,4">
                            <numeric:IntBox Name="txtResetIP"
                                            AllowSpinners="True"
                                            Foreground="White"
                                            Style="{DynamicResource MaterialDesignTextBoxBase}"
                                            Margin="4,0"
                                            MinValue="0"
                                            MaxValue="1000000"
                                            Text="0"
                                            PreviewTextInput="NumberValidationTextBox"
                                            VerticalAlignment="Top" />
                        </numeric:SpinnerDecorator>

                        <Button Grid.Column="2" x:Name="btnStart" Height="30" Width="80" Margin="0" IsEnabled="True" Click="btnStart_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Play" Width="15" Height="15" VerticalAlignment="Center" Margin="0" />
                                <TextBlock Margin="0" Text="Start" TextAlignment="Left" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="3" x:Name="btnStop" Height="30" Width="80" Margin="5,0,0,0"
                                IsEnabled="False" Style="{DynamicResource MaterialDesignRaisedAccentButton}" Click="btnStop_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Stop" Width="15" Height="15" VerticalAlignment="Center" Margin="0" />
                                <TextBlock Margin="0" Text="Stop" TextAlignment="Left" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                    </Grid>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                       
                    </Grid>
                </Grid>

                <StackPanel Orientation="Horizontal">
                    <TextBlock FontWeight="Bold"
                               Foreground="#FF20B2AA"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">Search --------------------------------------------------------------------------------------------</TextBlock>
                </StackPanel>

                <Grid Height="Auto">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="110" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>

                    <StackPanel Margin="0" Grid.Row="0" Grid.Column="0">
                        <ComboBox Name="ddlStore"
                                  SelectedValuePath="Id"
                                  DisplayMemberPath="Name"
                                  SelectionChanged="ddlStore_SelectionChanged"
                                  Foreground="{DynamicResource MaterialDesignBody}"
                                  IsSynchronizedWithCurrentItem="True" />
                    </StackPanel>

                    <StackPanel Margin="2,0" Grid.Row="0" Grid.Column="1">
                        <ComboBox Name="ddlStatus"
                                  SelectedValuePath="Id"
                                  DisplayMemberPath="Name"
                                  SelectionChanged="ddlStatus_SelectionChanged"
                                  Foreground="{DynamicResource MaterialDesignBody}"
                                  IsSynchronizedWithCurrentItem="True" />
                    </StackPanel>

                    <StackPanel Margin="5,0,0,0" Grid.Row="0" Grid.Column="2">
                        <TextBox Name="txtKeyword"
                                 Height="25"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Visible"
                                 Margin="2"
                                 BorderBrush="#FFDCDCDC"
                                 Foreground="{DynamicResource MaterialDesignBody}"
                                 KeyUp="txtKeyword_KeyUp" />
                    </StackPanel>
                </Grid>
            </StackPanel>
            <Grid Grid.Column="1" Grid.Row="0" Margin="10,0,5,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="481*"/>
                    <ColumnDefinition Width="226*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Column="1" >
                        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" >
                            <Hyperlink Click="chbShareConfig_Click"  FontWeight="Bold" Foreground="#FF20B2AA" TextDecorations="Underline">Share Config</Hyperlink>
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Grid.ColumnSpan="2" Grid.Row="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                                <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Share to Timeline"/></TextBlock>
                            </StackPanel>
                            <ToggleButton Grid.Row="0" Grid.Column="1" x:Name="chbShareToTimeline" IsChecked="False" Height="12" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left" Margin="0"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                                <TextBlock FontSize="11" Margin="2" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Share to Groups"/></TextBlock>
                            </StackPanel>
                            <ToggleButton Grid.Row="0" Grid.Column="1" x:Name="chbShareToGroups" IsChecked="False" Height="12" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left" Margin="0"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                                <TextBlock FontSize="11" Margin="2" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Share by Page Profile"/></TextBlock>
                            </StackPanel>
                            <ToggleButton Grid.Row="0" Grid.Column="1" x:Name="chbSharePageProfile" IsChecked="False" Height="12" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left" Margin="0"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                                <TextBlock FontSize="11" Margin="2" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Share Website"/></TextBlock>
                            </StackPanel>
                            <ToggleButton Grid.Row="0" Grid.Column="1" x:Name="chbShareWebsite" IsChecked="False" Height="12" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left" Margin="0"/>
                        </Grid>
                        <Button x:Name="btnAddNewAccount" Height="30" Width="auto" Margin="0,7,0,0"   IsEnabled="True" Background="BlueViolet" Click="btnAddNewAccount_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="UserAdd" Width="15" Height="15" VerticalAlignment="Center" Margin="2"/>
                                <TextBlock Margin="0,2" Grid.Column="1" Text="New Account" TextAlignment="Left" VerticalAlignment="Center" FontSize="12"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="0" Grid.Column="1" Margin="5,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Column="1">
                        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" >
                            <Hyperlink Click="chbGroupConfig_Click"  FontWeight="Bold" Foreground="#FF20B2AA" TextDecorations="Underline">Groups Config</Hyperlink>
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Margin="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                                <TextBlock Margin="2" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Join Groups"/></TextBlock>
                            </StackPanel>
                            <ToggleButton Grid.Row="0" Grid.Column="1" x:Name="chbGroupJoin" IsChecked="False" Height="12" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left" Margin="0"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                                <TextBlock Margin="2" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Leave Groups"/></TextBlock>
                            </StackPanel>
                            <ToggleButton Grid.Row="0" Grid.Column="1" x:Name="chbGroupLeave" IsChecked="False" Height="12" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left" Margin="0"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                                <TextBlock Margin="2" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="View Groups"/></TextBlock>
                            </StackPanel>
                            <ToggleButton Grid.Row="0" Grid.Column="1" x:Name="chbGroupView" IsChecked="False" Height="12" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left" Margin="0"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                                <TextBlock Margin="2" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Auto Scroll"/></TextBlock>
                            </StackPanel>
                            <ToggleButton Grid.Row="0" Grid.Column="1" x:Name="chbAutoScrollGroup" IsEnabled="True" IsChecked="False" Height="12" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left" Margin="0"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                                <TextBlock Margin="2" FontSize="11" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Backup Groups"/></TextBlock>
                            </StackPanel>
                            <ToggleButton Grid.Row="0" Grid.Column="1" x:Name="chbGroupBackup" IsChecked="False" Height="12" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left" Margin="0"/>
                        </Grid>
                        <Button x:Name="btnStore" Height="30" Width="auto" Margin="6"   IsEnabled="True" Background="DodgerBlue" Click="btnStore_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Store" Width="15" Height="15" VerticalAlignment="Center" Margin="2"/>
                                <TextBlock Margin="0,2" Grid.Column="1" Text="Store" TextAlignment="Left" VerticalAlignment="Center" FontSize="12"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="0" Grid.Column="2" Margin="5,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Column="1">
                        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" >
                            <Hyperlink Click="chbPageConfig_Click"  FontWeight="Bold" Foreground="#FF20B2AA" TextDecorations="Underline">Pages Config</Hyperlink>
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Grid.ColumnSpan="2" Grid.Row="1" Margin="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                                <TextBlock Margin="2" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Create Pages"/></TextBlock>
                            </StackPanel>
                            <ToggleButton Grid.Row="0" Grid.Column="1" x:Name="chbPageCreate" IsEnabled="True" IsChecked="False" Height="12" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left" Margin="0"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                                <TextBlock Margin="2" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Follow/Like Pages"/></TextBlock>
                            </StackPanel>
                            <ToggleButton Grid.Row="0" Grid.Column="1" x:Name="chbPageFollow" IsEnabled="True" IsChecked="False" Height="12" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left" Margin="0"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                                <TextBlock Margin="2" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Backup Pages (Token)"/></TextBlock>
                            </StackPanel>
                            <ToggleButton Grid.Row="0" Grid.Column="1" x:Name="chbPageBackup" IsChecked="False" Height="12" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left" Margin="0"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                                <TextBlock Margin="2" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Auto Scroll"/></TextBlock>
                            </StackPanel>
                            <ToggleButton Grid.Row="0" Grid.Column="1" x:Name="chbAutoScrollPage" IsEnabled="True" IsChecked="False" Height="12" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left" Margin="0"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                                <TextBlock Margin="2" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Create Reel"/></TextBlock>
                            </StackPanel>
                            <ToggleButton Grid.Row="0" Grid.Column="1" x:Name="chbPageCreateReel" IsEnabled="True" IsChecked="False" Height="12" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left" Margin="0"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                                <TextBlock Margin="2" Foreground="OrangeRed" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Invite Pages"/></TextBlock>
                            </StackPanel>
                            <ToggleButton Grid.Row="0" Grid.Column="1" x:Name="chbPageInvite" IsEnabled="True" IsChecked="False" Height="12" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left" Margin="0"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                                <TextBlock Margin="2" Foreground="OrangeRed" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Remove Pages"/></TextBlock>
                            </StackPanel>
                            <ToggleButton Grid.Row="0" Grid.Column="1" x:Name="chbPageRemoveAdmin" IsEnabled="True" IsChecked="False" Height="12" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left" Margin="0"/>
                        </Grid>
                        <Button IsEnabled="True" x:Name="btnClearAllCache" Click="btnClearAllCache_Click"  Height="30" Width="auto" Margin="0,6,0,0" Background="CadetBlue">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="MonitorClean" Width="15" Height="15" VerticalAlignment="Center" Margin="2"/>
                                <TextBlock Margin="0,2" Grid.Column="1" Foreground="OrangeRed" Text="Clear All Cache" TextAlignment="Left" VerticalAlignment="Center" FontSize="12"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="0" Grid.Column="3" Margin="5,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Column="1">
                        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" >
                            <Hyperlink Click="chbNewsFeedConfig_Click"  FontWeight="Bold" Foreground="#FF20B2AA" TextDecorations="Underline">News Feed Config</Hyperlink>
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Grid.ColumnSpan="3" Grid.Row="1" Margin="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                                <TextBlock Margin="2" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Play on News Feed"/></TextBlock>
                            </StackPanel>
                            <ToggleButton Grid.Row="0" Grid.Column="1" x:Name="chbNewsFeedPlay" IsEnabled="True" IsChecked="False" Height="12" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left" Margin="0"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                                <TextBlock Margin="2" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Read Notifications"/></TextBlock>
                            </StackPanel>
                            <ToggleButton Grid.Row="0" Grid.Column="1" x:Name="chbNewsFeedReadNotification" IsEnabled="True" IsChecked="False" Height="12" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left" Margin="0"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                                <TextBlock Margin="2" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Read Messenger"/></TextBlock>
                            </StackPanel>
                            <ToggleButton Grid.Row="0" Grid.Column="1" x:Name="chbNewsFeedReadMessenger" IsEnabled="True" IsChecked="False" Height="12" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left" Margin="0"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0">
                                <TextBlock Margin="2" Foreground="{DynamicResource MaterialDesignBody}" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Text="Post to Timeline"/></TextBlock>
                            </StackPanel>
                            <ToggleButton Grid.Row="0" Grid.Column="1" x:Name="chbNewsFeedPostTimeline" IsEnabled="True" IsChecked="False" Height="12" Style="{DynamicResource MaterialDesignSwitchToggleButton}" HorizontalAlignment="Left" Margin="0"/>
                        </Grid>

