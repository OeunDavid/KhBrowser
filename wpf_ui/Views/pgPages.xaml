<Page x:Class="ToolKHBrowser.Views.pgPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:numeric="http://gu.se/NumericInput"
      mc:Ignorable="d"
      Width="860"
      Height="980"
      Title="pgPages"
      Background="#05070D">
    <Page.Resources>
        <SolidColorBrush x:Key="Bg"
                         Color="#05070D"/>
        <SolidColorBrush x:Key="Panel"
                         Color="#090C12"/>
        <SolidColorBrush x:Key="BorderC"
                         Color="#171D28"/>
        <SolidColorBrush x:Key="Input"
                         Color="#10141C"/>
        <SolidColorBrush x:Key="InputBorder"
                         Color="#222A38"/>
        <SolidColorBrush x:Key="Txt"
                         Color="#E7ECF5"/>
        <SolidColorBrush x:Key="Muted"
                         Color="#858C9D"/>
        <SolidColorBrush x:Key="Accent"
                         Color="#12E3D8"/>

        <Style x:Key="SecTitle"
               TargetType="TextBlock">
            <Setter Property="Foreground"
                    Value="{StaticResource Accent}"/>
            <Setter Property="FontWeight"
                    Value="Bold"/>
            <Setter Property="FontSize"
                    Value="13"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
        </Style>

        <Style x:Key="Lbl"
               TargetType="TextBlock">
            <Setter Property="Foreground"
                    Value="{StaticResource Muted}"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="FontSize"
                    Value="11"/>
            <Setter Property="Margin"
                    Value="0,0,0,8"/>
        </Style>

        <Style x:Key="FieldTxt"
               TargetType="TextBlock">
            <Setter Property="Foreground"
                    Value="{StaticResource Txt}"/>
            <Setter Property="FontSize"
                    Value="13"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
        </Style>

        <Style x:Key="DarkTb"
               TargetType="TextBox">
            <Setter Property="Foreground"
                    Value="{StaticResource Txt}"/>
            <Setter Property="Background"
                    Value="{StaticResource Input}"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource InputBorder}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Padding"
                    Value="14,10"/>
            <Setter Property="CaretBrush"
                    Value="White"/>
            <Setter Property="TextWrapping"
                    Value="Wrap"/>
            <Setter Property="VerticalScrollBarVisibility"
                    Value="Auto"/>
        </Style>

        <Style x:Key="DarkInt"
               TargetType="{x:Type numeric:IntBox}">
            <Setter Property="Foreground"
                    Value="{StaticResource Txt}"/>
            <Setter Property="Background"
                    Value="{StaticResource Input}"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource InputBorder}"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="8,6"/>
            <Setter Property="Margin"
                    Value="0"/>
        </Style>

        <Style x:Key="RangeWrap"
               TargetType="Border">
            <Setter Property="Background"
                    Value="{StaticResource Input}"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource InputBorder}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="14"/>
            <Setter Property="Padding"
                    Value="8,6"/>
        </Style>

        <Style x:Key="RadioDark"
               TargetType="RadioButton"
               BasedOn="{StaticResource MaterialDesignRadioButton}">
            <Setter Property="Foreground"
                    Value="{StaticResource Txt}"/>
            <Setter Property="Margin"
                    Value="0,0,18,0"/>
        </Style>

        <Style x:Key="BrowseBtn"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#2563EB"/>
            <Setter Property="BorderBrush"
                    Value="#2563EB"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="Height"
                    Value="42"/>
            <Setter Property="MinWidth"
                    Value="120"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  Background="{StaticResource Bg}"
                  Padding="18,16,18,90">
        <StackPanel>
            <Grid Margin="0,0,0,14">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Style="{StaticResource SecTitle}"
                           Text="CREATE PAGE"/>
                <Border Grid.Column="2"
                        Height="1"
                        Background="#16252B"
                        VerticalAlignment="Center"/>
            </Grid>

            <Border Background="{StaticResource Panel}"
                    BorderBrush="{StaticResource BorderC}"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="18"
                    Margin="0,0,0,20">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{StaticResource FieldTxt}"
                                   Text="Page Create"/>
                        <Border Grid.Column="2"
                                Style="{StaticResource RangeWrap}"
                                Width="170"
                                Height="40"
                                CornerRadius="16">
                            <numeric:SpinnerDecorator>
                                <numeric:IntBox Name="txtPageCreate"
                                                AllowSpinners="True"
                                                Style="{StaticResource DarkInt}"
                                                MinValue="0"
                                                MaxValue="10000000"
                                                Text="0"
                                                PreviewTextInput="NumberValidationTextBox"/>
                            </numeric:SpinnerDecorator>
                        </Border>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Style="{StaticResource Lbl}"
                                       Text="PAGE NAME(S)"/>
                            <TextBox Name="txtPageNames"
                                     Style="{StaticResource DarkTb}"
                                     Height="190"
                                     AcceptsReturn="True"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Style="{StaticResource Lbl}"
                                       Text="PAGE CATEGORIES"/>
                            <TextBox Name="txtPageCategories"
                                     Style="{StaticResource DarkTb}"
                                     Height="190"
                                     AcceptsReturn="True"/>
                        </StackPanel>

                        <StackPanel Grid.Column="4">
                            <TextBlock Style="{StaticResource Lbl}"
                                       Text="BIO(S)"/>
                            <TextBox Name="txtBio"
                                     Style="{StaticResource DarkTb}"
                                     Height="190"
                                     AcceptsReturn="True"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <Grid Margin="0,0,0,14">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Style="{StaticResource SecTitle}"
                           Text="AUTO SCROLL PAGE"/>
                <Border Grid.Column="2"
                        Height="1"
                        Background="#16252B"
                        VerticalAlignment="Center"/>
            </Grid>

            <Border Background="{StaticResource Panel}"
                    BorderBrush="{StaticResource BorderC}"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="18"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Style="{StaticResource Lbl}"
                               Text="REACT ON POST"/>
                    <WrapPanel Margin="0,0,0,14">
                        <RadioButton x:Name="chbPageAutoScrollReactNone"
                                     Style="{StaticResource RadioDark}"
                                     IsChecked="True">None</RadioButton>
                        <RadioButton x:Name="chbPageAutoScrollReactLike"
                                     Style="{StaticResource RadioDark}">Like</RadioButton>
                        <RadioButton x:Name="chbPageAutoScrollReactComment"
                                     Style="{StaticResource RadioDark}">Comment</RadioButton>
                        <RadioButton x:Name="chbPageAutoScrollReactLikeComment"
                                     Style="{StaticResource RadioDark}">Like+Comment</RadioButton>
                        <RadioButton x:Name="chbPageAutoScrollReactRandom"
                                     Style="{StaticResource RadioDark}">Random</RadioButton>
                    </WrapPanel>

                    <TextBlock Style="{StaticResource Lbl}"
                               Text="COMMENTS"/>
                    <TextBox Name="txtPageAutoScrollComments"
                             Style="{StaticResource DarkTb}"
                             Height="90"
                             AcceptsReturn="True"/>
                </StackPanel>
            </Border>

            <Grid Margin="0,0,0,14">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Style="{StaticResource SecTitle}"
                           Text="LIKE/FOLLOW PAGE"/>
                <Border Grid.Column="2"
                        Height="1"
                        Background="#16252B"
                        VerticalAlignment="Center"/>
            </Grid>

            <Border Background="{StaticResource Panel}"
                    BorderBrush="{StaticResource BorderC}"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="18"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Style="{StaticResource Lbl}"
                               Text="PAGE URL(S)"/>
                    <TextBox Name="txtPageUrl"
                             Style="{StaticResource DarkTb}"
                             Height="150"
                             AcceptsReturn="True"/>
                </StackPanel>
            </Border>

            <Grid Margin="0,0,0,14">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Style="{StaticResource SecTitle}"
                           Text="CREATE REEL"/>
                <Border Grid.Column="2"
                        Height="1"
                        Background="#16252B"
                        VerticalAlignment="Center"/>
            </Grid>

            <Border Background="{StaticResource Panel}"
                    BorderBrush="{StaticResource BorderC}"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="18">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{StaticResource FieldTxt}"
                                   Text="Create"/>
                        <Border Grid.Column="2"
                                Style="{StaticResource RangeWrap}"
                                Width="170"
                                Height="40"
                                CornerRadius="16">
                            <numeric:SpinnerDecorator>
                                <numeric:IntBox Name="txtPageCreateReel"
                                                AllowSpinners="True"
                                                Style="{StaticResource DarkInt}"
                                                MinValue="0"
                                                MaxValue="10000000"
                                                Text="0"
                                                PreviewTextInput="NumberValidationTextBox"/>
                            </numeric:SpinnerDecorator>
                        </Border>
                    </Grid>

                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Style="{StaticResource Lbl}"
                                       Text="SOURCE FOLDER"/>
                            <TextBox Name="txtCreateReelSourceFolder"
                                     Style="{StaticResource DarkTb}"
                                     Height="42"
                                     TextWrapping="NoWrap"
                                     VerticalScrollBarVisibility="Disabled"
                                     VerticalContentAlignment="Center"/>
                        </StackPanel>
                        <Button Grid.Column="2"
                                x:Name="btnBrowse"
                                Style="{StaticResource BrowseBtn}"
                                Content="Browse"
                                Margin="0,19,0,0"
                                Click="btnBrowse_Click"/>
                    </Grid>

                    <TextBlock Style="{StaticResource Lbl}"
                               Text="HASHTAG(S)"/>
                    <TextBox Name="txtReelHashtag"
                             Style="{StaticResource DarkTb}"
                             Height="76"
                             AcceptsReturn="True"
                             Margin="0,0,0,16"/>

                    <TextBlock Style="{StaticResource Lbl}"
                               Text="CAPTION(S)"/>
                    <TextBox Name="txtReelCaptions"
                             Style="{StaticResource DarkTb}"
                             Height="110"
                             AcceptsReturn="True"/>
                </StackPanel>
            </Border>

            <Button x:Name="btnSaveConfig"
                    Visibility="Collapsed"
                    Width="1"
                    Height="1"
                    Click="btnSaveConfig_Click"/>
        </StackPanel>
    </ScrollViewer>
</Page>
