<Window x:Class="ToolKHBrowser.Views.wdDialogForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolKHBrowser.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        KeyDown="Window_KeyDown"
        Title="wdDialogForm"
        WindowState="Maximized"
        MouseDoubleClick="Window_MouseDoubleClick">

    <Window.Background>
        <SolidColorBrush Opacity="0.82" Color="#02040A"/>
    </Window.Background>

    <Grid>

        <Border x:Name="gContent"
                Background="#05070D"
                BorderBrush="#1B2538"
                BorderThickness="1"
                CornerRadius="24"
                MinWidth="300"
                MaxWidth="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ActualWidth}"
                MaxHeight="800"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="8">

            <Border.Effect>
                <DropShadowEffect Color="#000000"
                                  BlurRadius="24"
                                  ShadowDepth="0"
                                  Opacity="0.6"/>
            </Border.Effect>

            <Grid ClipToBounds="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="108"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <Border Grid.Row="0"
                        Background="#2F62D8"
                        CornerRadius="24,24,0,0">
                    <Grid Margin="26,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="56"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Width="48"
                                Height="48"
                                CornerRadius="12"
                                Background="#2B56C5"
                                BorderBrush="#4D77E3"
                                BorderThickness="1"
                                VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="TuneVariant"
                                                     Width="20"
                                                     Height="20"
                                                     Foreground="White"
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Center"/>
                        </Border>

                        <TextBlock x:Name="lblWinTitle"
                                   Grid.Column="1"
                                   Margin="14,0,0,0"
                                   VerticalAlignment="Center"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   FontSize="16"
                                   Text="Dialog"/>

                        <Button x:Name="btnPower"
                                Grid.Column="2"
                                Width="42"
                                Height="42"
                                Background="#F8FAFC"
                                BorderBrush="#D8DEE9"
                                BorderThickness="1"
                                Padding="0"
                                Foreground="#1E293B"
                                Click="btnPower_Click"
                                VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Power"
                                                     Width="20"
                                                     Height="20"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- BODY (SCROLLABLE) -->
                <Border Grid.Row="1"
                        Background="#05070D"
                        CornerRadius="0"
                        BorderBrush="#11151F"
                        BorderThickness="0">

                    <Frame x:Name="frameMain"
                           NavigationUIVisibility="Hidden"
                           Background="#05070D"
                           ScrollViewer.VerticalScrollBarVisibility="Disabled"
                           ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                </Border>

                <!-- FOOTER -->
                <Border x:Name="dialogFooterBar"
                        Grid.Row="2"
                        Height="92"
                        Background="#080B12"
                        BorderBrush="#1A1F2B"
                        BorderThickness="0,1,0,0"
                        CornerRadius="0,0,24,24">
                    <Grid Margin="18,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="14"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="1"
                                x:Name="btnDialogCancel"
                                Height="42"
                                MinWidth="120"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Foreground="#B8BDC9"
                                FontWeight="Bold"
                                FontSize="12"
                                Padding="16,0"
                                Click="btnDialogCancel_Click"
                                VerticalAlignment="Center">
                            <TextBlock Text="CANCEL"/>
                        </Button>

                        <Button Grid.Column="3"
                                x:Name="btnDialogSave"
                                Height="42"
                                MinWidth="220"
                                Background="#2563EB"
                                BorderBrush="#2563EB"
                                Foreground="White"
                                FontWeight="Bold"
                                FontSize="12"
                                Padding="20,0"
                                Click="btnDialogSave_Click"
                                VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="ContentSave"
                                                         Width="16"
                                                         Height="16"
                                                         Margin="0,0,8,0"
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="SAVE CONFIG"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

            </Grid>
        </Border>

    </Grid>
</Window>
